
<%- include('partials/header') %>

<h2>Création d'une gamme de pains</h2>

<form method="post" action="/admin/gamme-pains">
    <div>
        <label for="name" >Nom de la gamme : </label>
        <input type="text" name="name" id="name" value= "" size="40" required/>
    </div>

    <div>
        <label for="description">Description : </label>
        <textarea name="description" cols="60" rows="5" id="description" required></textarea>    
    </div>

    <div>
        <label for="ingredient">Ingrédient : </label>
        <textarea name="ingredient" cols="60" rows="5" id="ingredient" required></textarea> 
    </div>

    <div>
        <label for="photo">Photo :  </label>
        <input type="text" name="photo" id="photo" value= "" size="60" required/>
    </div>

    <div>
        <input type="radio" name="status" id="statusTrue" value= "true" checked/>
        <label for="true">Visible</label>
        <input type="radio" name="status" id="statusFalse" value= "false"/>
        <label for="false">Non visible</label>   
    </div>


        <button class="button"type="submit">Créer la gamme de pains</button>
    </form>
    <a href="/admin/gamme-pains"><button class="button">Annuler</button></a>

<%- include('partials/footer') %>