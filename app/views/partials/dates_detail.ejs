<%- include('partials/header') %> 
 
<h2>Détail d'une date de livraison</h2>

<form method="post" action="/admin/dates-livraison/<%= id %>">
    <div>
        <label for="date">Date : </label>
        <input type="datetime" name="date" id="date" value = "<%= date.date.toLocaleDateString('en-GB') %>" required/>
    </div>    
        
    <div>   
        <% let isCheckedTrue="" %>
        <% let isCheckedFalse="" %>
        <% date.status ? isCheckedTrue = "checked" : isCheckedFalse = "checked" %>
        <input type="radio" name="status" id="statusTrue" value="true" <%= isCheckedTrue %>>
        <label for="statusTrue">Date valide</label>
        <input type="radio" name="status" id="statusFalse" value="false" <%= isCheckedFalse %>>
        <label for="statusFalse">Date annulée</label>
    </div> 
        <button class="button"type="submit">Modifier la date</button>
</form>
<a href="/admin/dates-livraison"> <button class="button">Annuler</button></a>
    
<%- include('partials/footer') %>